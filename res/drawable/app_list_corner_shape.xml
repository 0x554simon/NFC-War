<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Non focused states -->
    <item android:state_pressed="false">
		<shape>
		    <gradient android:startColor="@color/listview_background_start" 
		        android:endColor="@color/listview_background_end" 
		        android:angle="270"/>
		</shape>
	</item>
	<item android:state_pressed="true">
	    <shape>
		    <gradient android:startColor="@color/listview_background_item_pressed_start" 
		        android:endColor="@color/listview_background_item_pressed_end" 
		        android:angle="270"/>
		</shape>
	</item> 
</selector>